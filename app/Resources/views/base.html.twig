<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js oldies" lang="en"> <![endif]--> 
<!--[if IE 7]>    <html class="no-js ie7 oldies" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8 oldies" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" lang="en"> <!--<![endif]--> 
<html>
    <head>
        <meta charset="UTF-8" />
        {% block meta_title %}<title>{% block inside_meta_title %}{% endblock inside_meta_title %}</title>{% endblock meta_title %}

        <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
        {% block stylesheets %}
            {% if app.environment != 'prod' %}
                <!-- Switch environnement développement développement:  -->
                <script type="text/javascript"> less = {env: 'development'};</script>
                <link href="{{ asset("less/base.less") }}" rel="stylesheet/less" type="text/css" />
            {% else %}
                <link rel="stylesheet" type="text/css" href="/css/base.css" />
            {% endif %}
        {% endblock stylesheets %}                                                                                                     

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"  type="image/x-icon"  />
    </head>
    
    {% block body %}
    <body>
        {% block inside_body %}
            {% set flashs = ['notice', 'error', 'success', 'info'] %}
            {% for  flash in flashs %}
                {% for  message in app.session.flashBag.get(flash) %}
                    <div class="notice"> {{ message }}</div>
                {% endfor %}
            {% endfor %}


            {% block main %}
            {% spaceless %}
            <div id="main">

                {% block header %}
                <header>
                    {% block inside_header %}
                    {% endblock inside_header %}
                </header>
                {% endblock header %}

                {% block middle %}
                <div id="middle">
                    {% block inside_middle %}
                    {% endblock inside_middle %}
                </div>
                {% endblock middle %}

                {% block footer %}
                <footer>
                    {% block inside_footer %}
                    {% endblock inside_footer %}
                </footer>
                {% endblock footer %}
            </div>
            {% endspaceless %}
            {% endblock main %}

            {% block javascripts %}
                {% if app.environment != 'prod' %}
                    <!--script src="http://files.keyes.ie/baseliner-latest.min.js"></script>
                    <script>
                        window.onload = function() {
                            baseliner = new Baseliner(12);
                        }
                    </script-->
                    <script src="{{ asset("js/less-1.4.1.min.js") }}" type="text/javascript"></script>
                {% endif %}

                <!-- JS  jquery 2.0 ne support pas ie8 et moins donc reste avec 1.10  -->                        
                <script src="{{ asset("js/jquery-1.10.2.min.js") }}" type="text/javascript"></script>
                <script src="{{ asset("js/jquery-ui-1.10.3.custom.min.js") }}" type="text/javascript"></script>
                <script src="{{ asset("js/site.js") }}" type="text/javascript"></script>
                <script src="{{ asset("js/horloge.js") }}" type="text/javascript"></script>
            {% endblock javascripts %}
        {% endblock inside_body %}
    </body>
    {% endblock body %}
</html>
