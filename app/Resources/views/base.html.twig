<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js oldies" lang="en"> <![endif]--> 
<!--[if IE 7]>    <html class="no-js ie7 oldies" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8 oldies" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]--> 
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Evocatio Solutions Technologiques{% endblock %}</title>
        <!-- script src="/js/libs/modernizr-2.5.2.min.js"></script -->
        <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
        <script src="{{ asset("js/jquery.min.js") }}"></script>
        {% block stylesheets %}
            {% if app.environment != 'prod' %}
            <!-- Switch environnement développement développement:  -->
            <script type="text/javascript"> less = { env: 'development' }; </script>
            <link href="{{ asset("less/base.less") }}" rel="stylesheet/less" type="text/css">
            <script src="{{ asset("js/less-1.3.0.min.js") }}" type="text/javascript"></script>
            {% else %}
            <link rel="stylesheet" type="text/css" href="/css/base.css">
            {% endif %}
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"  type="image/x-icon"  />
    </head>
    <body>
        <div class="wrapper">
            {% if app.session.hasFlash("notice")%}
                    <div class="notice">
                {{ app.session.flash("notice") }}
                        </div>
            {% endif %}
            {% if app.session.hasFlash("error") %}
                        <div class="error">
                {{ app.session.flash("error") }}
                            </div>
            {% endif %}
            {% if app.session.hasFlash("success") %}
                            <div class="success">
                {{ app.session.flash("success") }}
                                </div>
            {% endif %}
            {% if app.session.hasFlash("info") %}
                                <div class="info">
                {{ app.session.flash("info") }}
                                    </div>
            {% endif %}
            {#{ app.session["_locale"] }#}
            {% block body %}
                <header>
                    {% block header %}
                    <a class="logo" href="{{ path('WebsiteSiteBundle_Home')}}">
                        <img src="/bundles/websitesite/images/evocatio_modified.png" alt="evocatio-logo" />
                    </a>
                    <nav>
                        <ul class="menu">
                            <li class="menu-item"><a href="{{ path('WebsiteSiteBundle_Home')}}">Accueil</a></li>
                            <li class="menu-item"><a href="{{ path('EvocatioFaqBundle_FaqIndex')}}">Faq</a></li>
                            <li class="menu-item"><a href="#">Contact</a></li>
                        </ul>
                    </nav>
                    <div>
                        {% render "EvocatioCoreBundle:Core:i18nSwitcher" with {"_locale" : app.getRequest().get("_locale")} %}
                    </div>
                    {% endblock header %}
                </header>

                <div id="main">
                {% block main %}
                    {% block aside %}
                        <div class="left">
                        </div>
                    {% endblock aside %}
                    {% block theatre %}
                        <div class="right">
                            this is the theater
                        </div>
                    {% endblock theatre %}
                {% endblock main %}
                </div>

                <footer>
                    {% block footer %}
                        this is the footer
                    {% endblock footer %}
                </footer>
            {% endblock body %}
            {% block javascripts %}{% endblock javascripts %}
        </div>
    </body>
</html>
