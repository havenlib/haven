<!--[if IE 8]>    <html class="no-js ie8 oldies" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" lang="en"> <!--<![endif]--> 
<html>
    <head>
            <meta charset="UTF-8" />
            {% block title %}<title>{% block inside_title %}{% endblock inside_title %}</title>{% endblock title %}
            <!-- script src="/js/libs/modernizr-2.5.2.min.js"></script -->
            <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
        {% block stylesheets %}
            {% if app.environment != 'prod' %}
            <!-- Switch environnement développement développement:  -->
            <script type="text/javascript"> less = { env: 'development' }; </script>

            <!-- JS -->
            <link href="{{ asset("less/base.less") }}" rel="stylesheet/less" type="text/css" />

            <!-- CSS -->
            <link rel="stylesheet" type="text/css" href="{{ asset("css/bootstrap-responsive.min.css") }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset("css/bootstrap.min.css") }}" />
            {% else %}
            <link rel="stylesheet" type="text/css" href="/css/base.css" />
            {% endif %}
        {% endblock %}

            <!-- JS -->
            <script src="{{ asset("js/jquery.min.js") }}"></script>
            <script src="{{ asset("js/bootstrap.min.js") }}" type="text/javascript"></script>
            <script src="{{ asset("js/less-1.3.0.min.js") }}" type="text/javascript"></script>
            <script src="{{ asset("js/ckeditor/ckeditor.js") }}" type="text/javascript"></script>
            <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"  type="image/x-icon"  />
    </head>
    {% block body %}
    <body>
        {% block inside_body %}
            
        {% if app.session.hasFlash("notice")%}
            <div class="notice"> {{ app.session.flash("notice") }}</div>
        {% endif %}

        {% if app.session.hasFlash("error") %}
            <div class="error"> {{ app.session.flash("error") }} </div>
        {% endif %}

        {% if app.session.hasFlash("success") %}
            <div class="success"> {{ app.session.flash("success") }}</div>
        {% endif %}

        {% if app.session.hasFlash("info") %}
            <div class="info"> {{ app.session.flash("info") }} </div>
        {% endif %}
        {% block header %}
        <header>
            {% block inside_header %}
           <!-- <a class="logo" href="{#{ path('WebsiteSiteBundle_Home')}#}">
                <img src="/bundles/websitesite/images/evocatio_modified.png" alt="evocatio-logo" />
            </a>
            <div class="lang pull-right">{#% render "EvocatioCoreBundle:Core:i18nSwitcher" with {"_locale" : app.getRequest().get("_locale"), "template" : "WebsiteSiteBundle:Core:i18nSwitcher.html.twig"} %#}
            </div> -->
            {% endblock inside_header %}
        </header>
        {% endblock header %}              
        {% block main %}
        <div id="main">
            {% block inside_main %}
            {% block navigation %}
            <div id="navigation" class="navbar">
                {% block inside_navigation %}                
                {% endblock inside_navigation %}
            </div>
            {% endblock navigation %}
            {% block content %}
            <div class="content">
                {% block inside_content %}
                {% endblock inside_content %}
            </div>
            {% endblock content %}
            {% endblock inside_main %}
        </div>
        {% endblock main %}
        {% block footer %}
        <footer>
        {% block inside_footer %}
        {% endblock inside_footer %}
        </footer>
        {% endblock footer %}
            
        {% block javascripts %}
        {% endblock javascripts %}
    {% endblock inside_body %}
    </body>
    {% endblock body %}
</html>
