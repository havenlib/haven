<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js oldies" lang="en"> <![endif]--> 
<!--[if IE 7]>    <html class="no-js ie7 oldies" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8 oldies" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]--> 
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Evocatio Solutions Technologiques{% endblock %}</title>
        <!-- script src="/js/libs/modernizr-2.5.2.min.js"></script -->
        <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
        {% block stylesheets %}
            {% if app.environment != 'prod' %}
        <!-- Switch environnement développement développement:  -->
        <script type="text/javascript"> less = { env: 'development' }; </script>

        <!-- JS -->
        <link href="{{ asset("less/base.less") }}" rel="stylesheet/less" type="text/css" />

        <!-- CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset("css/bootstrap-responsive.min.css") }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset("css/bootstrap.min.css") }}" />
            {% else %}
        <link rel="stylesheet" type="text/css" href="/css/base.css" />
            {% endif %}
        {% endblock %}

        <!-- JS -->
        <script src="{{ asset("js/jquery.min.js") }}"></script>
        <script src="{{ asset("js/bootstrap.min.js") }}" type="text/javascript"></script>
        <script src="{{ asset("js/less-1.3.0.min.js") }}" type="text/javascript"></script>
        <script src="{{ asset("js/ckeditor/ckeditor.js") }}" type="text/javascript"></script>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"  type="image/x-icon"  />
    </head>
    <body class="frontend">
        <div class="wrapper">
            {% if app.session.hasFlash("notice")%}
            <div class="notice"> {{ app.session.flash("notice") }}</div>
            {% endif %}
            
            {% if app.session.hasFlash("error") %}
            <div class="error"> {{ app.session.flash("error") }} </div>
            {% endif %}
            
            {% if app.session.hasFlash("success") %}
            <div class="success"> {{ app.session.flash("success") }}</div>
            {% endif %}
            
            {% if app.session.hasFlash("info") %}
            <div class="info"> {{ app.session.flash("info") }} </div>
            {% endif %}
            {#{ app.session["_locale"] }#}
            {% block body %}
                <header>
                    {% block header %}
                    <a class="logo" href="{{ path('WebsiteSiteBundle_Home')}}">
                        <img src="/bundles/websitesite/images/evocatio_modified.png" alt="evocatio-logo" />
                    </a>
                    <div class="lang pull-right">
                        {% render "EvocatioCoreBundle:Core:i18nSwitcher" with {"_locale" : app.getRequest().get("_locale"), "template" : "WebsiteSiteBundle:Core:i18nSwitcher.html.twig"} %}
                    </div>
                    <div>
                        {% render "EvocatioSecurityBundle:Login:login" %}
                    </div>
                    {% endblock header %}
                </header>

                <div id="main">
                {% block main %}
                    <div class="left">
                    {% block aside %}
                    {% endblock aside %}
                    </div>
                    <div class="middle">
                    {% block theatre %}
                            this is the theater
                    {% endblock theatre %}
                {% endblock main %}
                    </div>
                    <div class="bottom">
                        <div class="menu-wraper">
                            <div class="menu-separator"> </div>
                            <ul class="menu">
                                <li class="menu-item"><a href="#">ACCUEIL</a></li>
                                <li class="menu-item"><a href="#">ACTUALITÉS</a></li>
                                <li class="menu-item"><a href="#">PRODUITS</a></li>
                                <li class="menu-item"><a href="#">LIBRAIRIE</a></li>
                                <li class="menu-item"><a href="{{ path('EvocatioFaqBundle_FaqIndex') }}">FAQ</a></li>
                                <li class="menu-item"><a href="#">CONTACT</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <footer>
                    {% block footer %}
                        this is the footer
                    {% endblock footer %}
                </footer>
            {% endblock body %}
            {% block javascripts %}{% endblock javascripts %}
        </div>
    </body>
</html>
