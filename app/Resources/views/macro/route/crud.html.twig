{% macro create(route) %}
    {{ path(route, {'create': ('create' | trans({}, 'routes'))})}}
{% endmacro %}

{% macro edit(route, id) %}
    {{ path(route, {'edit': ('edit' | trans({}, 'routes')), 'id': id})}}
{% endmacro %}

{% macro show(route, id) %}
    {{ path(route, {'show': ('show' | trans({}, 'routes')), 'id': id})}}
{% endmacro %}

{% macro list(route, id) %}
    {{ path(route, {'list': ('list' | trans({}, 'routes')), 'id': id})}}
{% endmacro %}
