{%  extends "::base.html.twig" %}
{% import "::macro/route/crud.html.twig" as _route_crud %}
{% block inside_theater %}
<h1>Post</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.getId() }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ entity.getStatus() }}</td>
        </tr>
        <tr>
            <th>title</th>
            <td>{{ entity.getTitle() }}</td>
        </tr>
        <tr>
            <th>excerpt</th>
            <td>{{ entity.getExcerpt() }}</td>
        </tr>
        <tr>
            <th>image</th>
            <td>{{ entity.getPath() }}</td>
        </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ _route_crud.path('evocatio_web_post_list', 'list') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ _route_crud.path('evocatio_web_post_edit', 'edit', entity.id) }}">
            Edit
        </a>
    </li>
    {#<li>
        <form action="{{ path('EvocatioWebBundle_PostDelete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>#}
</ul>
{% endblock inside_theater %}