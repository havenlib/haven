{%  extends "::base.html.twig" %}
{% import "::macro/route/crud.html.twig" as _route_crud %}
{% block inside_theater %}
    <dl>
        {% for entity in entities %}
            <dt><div>{{ entity.status?'Published':'Inactive' }}</div> <strong>{{ entity.title }}</strong> 
            <a href="{{ _route_crud.path('evocatio_web_post_edit', 'edit', entity.id) }}">edit</a> 
            <a href="{{ path('evocatio_web_post_show', {'show': ('show' | trans({}, 'routes')), 'id': entity.id}) }}">show</a> </dt>
            <dd>{{ entity.excerpt }}</dd>
        {{ entity.name }}
        {% else %}
            aucune entr√©
        {% endfor %}
    </dl>
<ul>
    <li>
        <a href="{{ _route_crud.path('evocatio_web_post_create', 'create') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock inside_theater %}
