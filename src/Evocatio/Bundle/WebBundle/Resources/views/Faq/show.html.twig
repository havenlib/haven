{%  extends "::base.html.twig" %}
{% block inside_content %}
<h1>Faq</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ entity.status }}</td>
        </tr>
        <tr>
            <th>Question</th>
            <td>{{ entity.question }}</td>
        </tr>
        <tr>
            <th>Reponse</th>
            <td>{{ entity.reponse }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('evocatio_web_faq_list', {'list': ('list' | trans({}, 'routes'))}) }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('evocatio_web_faq_edit', {'edit': ('edit' | trans({}, 'routes')), 'id': entity.id}) }}">
            Edit
        </a>
    </li>
