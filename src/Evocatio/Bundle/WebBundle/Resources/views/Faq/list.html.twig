{% extends "::base.html.twig" %}
{% import "::macro/route/crud.html.twig" as _route_crud %}
{% block inside_theater %}
<dl>
    {% for entity in entities %}
        <dt>
            <div>{{ entity.status?'Published':'Inactive' }}</div> 
            <strong>{{ entity.question }}</strong> 
            <a href="{{ _route_crud.path('evocatio_web_faq_edit', 'edit', entity.id) }}">edit</a> 
        </dt>
        <dd>{{ entity.reponse }}</dd>
    {% else %}
        aucun
    {% endfor %}
</dl>
<ul>
    <li>
        <a href="{{ _route_crud.path('evocatio_web_faq_create', 'create') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock inside_theater %}
{% block aside %}
    {#% render "EvocatioCoreBundle:Core:i18nSwitcher" with {"_locale" : app.getRequest().get("_locale")} %#}
{% endblock aside %}


