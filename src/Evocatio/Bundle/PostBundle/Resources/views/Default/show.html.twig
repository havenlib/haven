{%  extends "::base.html.twig" %}
{% block left %}
<h1>Post</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ post.status }}</td>
        </tr>
        <tr>
            <th>title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>excerpt</th>
            <td>{{ post.excerpt }}</td>
        </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('EvocatioPostBundle_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('EvocatioPostBundle_edit', { 'id': post.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('EvocatioPostBundle_delete', { 'id': post.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock left %}
{% block right %}
    {% render "EvocatioCoreBundle:Default:i18nSwitcher" %}
{% endblock right %}