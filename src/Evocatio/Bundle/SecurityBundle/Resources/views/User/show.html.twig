{%  extends "::base.html.twig" %}
{% import "::macro/route/suffix.html.twig" as route_suffix %}
{% block inside_content %}
<h1>Security</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.getId() }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ entity.getStatus() }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ entity.getUsername() }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.getEmail() }}</td>
        </tr>
        <tr>
            <th>Locked</th>
            <td>{{ entity.getLocked()?"Locked":"Unlocked" }}</td>
        </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ route_suffix.path('evocatio_security_user_list', 'list','user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ route_suffix.path('evocatio_security_user_edit', 'edit','user', entity.id) }}">
            Edit
        </a>
    </li>
    {#<li>
        <form action="{{ path('EvocatioSecurityBundle_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>#}
</ul>
{% endblock inside_content %}