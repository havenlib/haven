{%  extends "::base.html.twig" %}
{% import "::macro/route/suffix.html.twig" as _route_suffix %}
{% block inside_content %}
    <dl>
        {% for entity in entities %}
            <div>
                <div> {{ entity.firstname }}</div> 
                <strong>{{ entity.lastname }}</strong> 
                <a href="{{ _route_suffix.path('evocatio_persona_person_edit', 'edit', 'person', entity.id) }}">edit</a> 
                <a href="{{ _route_suffix.path('evocatio_persona_person_show', 'show', 'person', entity.id) }}">show</a> 
            </div>
            <div>sex: {{ entity.sex }}</div>
            {% for coor in entity.getPostal() %}
            <div>{{ coor.getAddress() }}</div>
            {% endfor %}
            {% for coor in entity.getMap() %}
            <div>{{ coor.getLng() }}</div>
            {% endfor %}
        {% else %}
            aucune entr√©
        {% endfor %}
    </dl>
<ul>
    <li>
        <a href="{{ _route_suffix.path('evocatio_persona_person_create', 'create', 'person') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock inside_content %}
