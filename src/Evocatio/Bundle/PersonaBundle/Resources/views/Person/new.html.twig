{%  extends "EvocatioCoreBundle:Template:add_template.html.twig" %}
{% block formhead %}
    {{ path('EvocatioPersonaBundle_PersonCreate') }}
{% endblock formhead %}

{% block form %}
<fieldset>
    <ul>
        <li>{{ form_label(edit_form.firstname)}}
            {{ form_errors(edit_form.firstname)}}
                <span>{{ form_widget(edit_form.firstname)}}</span>
            </li>
            <li>{{ form_label(edit_form.lastname)}}
            {{ form_errors(edit_form.lastname)}}
                    <span>{{ form_widget(edit_form.lastname)}}</span>
                </li>
                <li>{{ form_label(edit_form.sex)}}
            {{ form_errors(edit_form.sex)}}
                        <span>{{ form_widget(edit_form.sex)}}</span>
                    </li>
                    <li>{{ form_label(edit_form.birthday)}}
            {{ form_errors(edit_form.birthday)}}
                            <span>{{ form_widget(edit_form.birthday)}}</span>
                        </li>
                        {{ form_rest(edit_form) }}
                </fieldset>
{% endblock form %}

{% block back %}
                <a href="{{ path('EvocatioPersonaBundle_PersonList') }}">
                    Back to the list
                </a>
{% endblock back %}
