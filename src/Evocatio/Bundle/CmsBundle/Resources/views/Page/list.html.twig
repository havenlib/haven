{% import "::macro/route/crud.html.twig" as route_crud %}
{% block inside_content %}
<h2>Liste des pages</h2>
    <dl>
        {% for entity in entities %}
            <div>
                <div> {{ entity.name }}</div> 
                <a href="{{ route_crud.edit('evocatio_cms_page_edit', entity.id) }}">edit</a> 
                <a href="{{ route_crud.show('evocatio_cms_page_show', entity.id) }}">show</a> 
            </div>
        {% else %}
            aucune entr√©
        {% endfor %}
    </dl>
<ul>
    <li>
        <a href="{{ route_crud.create('evocatio_cms_page_create') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock inside_content %}
