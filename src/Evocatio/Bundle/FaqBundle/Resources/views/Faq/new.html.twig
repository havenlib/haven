{%  extends "EvocatioCoreBundle:Template:multilangue_add_template.html.twig" %}
{% block formhead %}
    {{ path('EvocatioFaqBundle_create') }}
{% endblock formhead %}

{% block form %}
<fieldset>
        <ul>
            <li>{{ form_label(edit_form.status)}}
                <span>{{ form_widget(edit_form.status)}}</span>
            </li>
                {% for key, translation in edit_form.translations %}
            <li class="tab-element tab{{ translation.vars.value.getTransLang.id }}" {% if loop.index != 1 %}style="display:none;"{% endif %}>
                        {{ form_errors(translation.question) }}
                        {{ form_label(translation.question) }}
                        {{ form_widget(translation.question)}}
                </li>
                <li class="tab-element tab{{ translation.vars.value.getTransLang.id }}" {% if loop.index != 1 %}style="display:none;"{% endif %}>
                    <div>
                        {{ form_errors(translation.reponse) }}
                        {{ form_label(translation.reponse) }}
                            <span>
                                Pour coller des textes en provenance de pages web ou de Microsoft Word utilisez le bouton
                                qui Ã©liminera tout formatage
                                <span>
                                    Remplir en {{ translation.vars.value.getTransLang.getName }}
                                </span>
                            </span>
                        </div>
                        <div>
                        {{ form_widget(translation.reponse, {'attr': {'class': 'ckeditor ckeditor-admin'} }) }}
                            </div>
                        </li>
              {% endfor %}
                    </ul>
                        {{ form_rest(edit_form) }}
                </fieldset>
{% endblock form %}

{% block back %}
                <a href="{{ path('EvocatioFaqBundle_list') }}">
                    Back to the list
                </a>
{% endblock back %}
