{%  extends "::base.html.twig" %}
{% block theatre %}
<h1>Faq</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ entity.status }}</td>
        </tr>
        <tr>
            <th>Question</th>
            <td>{{ entity.question }}</td>
        </tr>
        <tr>
            <th>Reponse</th>
            <td>{{ entity.reponse }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('EvocatioFaqBundle_list') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('EvocatioFaqBundle_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('EvocatioFaqBundle_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock theatre %}
{% block aside %}
    {% render "EvocatioCoreBundle:Default:i18nSwitcher" with {"_locale" : app.getRequest().get("_locale")} %}
{% endblock aside %}