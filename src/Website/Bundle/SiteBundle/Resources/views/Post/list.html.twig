{%  extends "::admin_base.html.twig" %}
{% block theatre %}
<ul class="no-style-ul">
        {% for entity in entities %}
        <li>
            <ul class="admin-entities-lines ul-li-left-full-weight">
                <li><a href="{{ path('EvocatioPostBundle_PostShow', { 'id': entity.id }) }}" >Show</a></li>
                <li><a href="{{ path('EvocatioPostBundle_PostEdit', { 'id': entity.id }) }}" >Edit</a></li>
                <li> __{{ entity.status }}__ </li>
                <li> __>{{ entity.excerpt }}__ </li>
                <li><strong> {{ entity.title }} </strong></li>
            </ul>
        </li>
        {% else %}
        aucun
        {% endfor %}
</ul>
    <ul>
        <li>
            <a href="{{ path('EvocatioPostBundle_PostNew') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock theatre %}
