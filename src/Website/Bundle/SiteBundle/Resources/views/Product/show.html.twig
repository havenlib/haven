{%  extends "::base.html.twig" %}
{% block theatre %}
<h1>Security</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.getId() }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ entity.getStatus() }}</td>
        </tr>
        <tr>
            <th>GenericProductname</th>
            <td>{{ entity.getName() }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.getDescription() }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ entity.getPrice() }}</td>
        </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('EvocatioPosBundle_ProductIndex') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('EvocatioPosBundle_ProductEdit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('EvocatioPosBundle_ProductDelete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock theatre %}