{%  extends "OwnerSiteBundle::base_admin.html.twig" %}
{% import "::macro/route/i18n.html.twig" as route_i18n %}
{% block inside_content %}
<h2>{{"post.list" | trans}}</h2>
<table>
    <thead>
        <tr>
            <th>Status</th>
            <th>Title</th>
            <th>Rank</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="sortable">
        {% for entity in entities %}
            <tr>
                <td>{{ entity.status }}</td>
                <td>{{ entity.title }}</td>
                <td>
                    <a class="btn up pull-left" onclick="ranking(this, 'tr');"><img src="/images/arrow_up.png" /></a>
                    <a class="btn down pull-left" onclick="ranking(this, 'tr');"><img src="/images/arrow_down.png" /></a>
                    <form class="form no-margin" action="{{ route_i18n.path('owner_site_post_rank', {'id': entity.id}, ['rank']) }}" method="POST">
                        <input class="hidden" id="ranktype_rank" type="text" name="rank" value="{{entity.rank}}">
                        <button class="btn hidden pull-left" type="submit" id="ranktype_submit" name="submit">Ok</button>
                    </form>
                </td>
                <td>
                    <a href="{{ path('owner_site_post_edit', {'edit': ('edit' | trans({}, 'routes')), 'id': entity.id}) }}">edit</a>
                    | <a href="{{ path('owner_site_post_show', {'show': ('show' | trans({}, 'routes')), 'id': entity.id}) }}">show</a>
                    | <a href="{{ route_i18n.path('owner_site_post_rank', {'id': entity.id}, ['rank']) }}">ordonner</a>|
                     <form action="{{ route_i18n.path('owner_site_post_delete', {'id': entity.id}, ['delete']) }}" method="post">
                        {{ form_widget(delete_forms[entity.getId()]) }}
                    </form>
                </td>
            </tr>
        {% else %}
        </tbody>
        aucune entr√©
        {% endfor %}
    </table>
    <ul>
        <li>
            <a href="{{ path('owner_site_post_create', {'create': ('create' | trans({}, 'routes'))}) }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock inside_content %}
