{#% extends "OwnerSiteBundle:Templates:add_template.html.twig" %#}
{% extends "OwnerSiteBundle:Templates:multilangue_page.html.twig" %}
{% block formhead %}
    {{ _route_crud.path('owner_site_template_create', 'create') }}
{% endblock formhead %}

{% block form %}
<fieldset>
        {{ form_widget(edit_form) }}
        <div class="hidden">
        </div>
</fieldset>
{% endblock form %}


{% block available_content %}
<div id="htmlcontent" class="draggable" ondragstart="console.log('drag')">
    <img width="120px" style="border: 1px solid black" src="/images/html_content.jpg" />
</div>
{% endblock available_content %}
{% block back %}
    <a href="{{ _route_crud.path('owner_site_template_list', 'list') }}">
        Back to the list
    </a>
{% endblock back %}

{% block stylesheets %}
{{ parent() }}
            {% if app.environment != 'prod' %}
                <link href="{{ asset("less/formulator.less") }}" rel="stylesheet/less" type="text/css" />
            {% else %}
                <link rel="stylesheet" type="text/css" href="/css/base.css" />
            {% endif %}
{% endblock stylesheets %}