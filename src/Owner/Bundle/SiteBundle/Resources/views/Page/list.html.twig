{% extends "OwnerSiteBundle::base_admin.html.twig" %}
{% import "::macro/route/i18n.html.twig" as route_i18n %}
{% block inside_content %}
<h2>Liste des pages</h2>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="sortable">
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td>
                    <a href="{{ _route_crud.edit('owner_site_page_edit',  entity.id) }}">edit</a> 
                    | <a href="{{ _route_crud.show('owner_site_page_show', entity.id) }}">show</a> |
                     <form action="{{ route_i18n.path('owner_site_page_delete', {'id': entity.id}, ['delete']) }}" method="post">
                        {{ form_widget(delete_forms[entity.getId()]) }}
                    </form>
                </td>
            </tr>
        {% else %}
            aucune entr√©
        {% endfor %}
    </tbody>
</table>
<ul>
    <li>
        <a href="{{ _route_crud.path('owner_site_page_create', 'create') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock inside_content %}
