{% extends "OwnerSiteBundle::base.html.twig" %}
{% import "HavenCmsBundle:Macro:content.html.twig" as CHelp %}

{# set the language variable if it is null to not get errors , has to add the language to the call to the fill area and handle the translation in the macro for each type of content if we want to be able to display in another language then we work in #}
{% block navigation %}
{% endblock navigation %}

{% block inside_header %}
<div id="header" class="area">
    {% include "OwnerSiteBundle:Page:template/header.html.twig" %}
</div>
{% endblock inside_header %}
{% block inside_main %} 

    <div id="sidebar-left" class="area three-columns">
        {{ CHelp.fill_area(entity, "sidebar", edit_form is defined?edit_form:null , language is defined?language:"") }}
    </div>
    <div id="theatre" class="area three-columns">
        {{ CHelp.fill_area(entity, "theatre", edit_form is defined?edit_form:null , language is defined?language:"") }}
    </div>
    <div id="sidebar-right" class="area three-columns">
        {{ CHelp.fill_area(entity, "extras", edit_form is defined?edit_form:null , language is defined?language:"") }}
    </div>
{% endblock inside_main %}

    {% block inside_footer%} 
    {{ CHelp.fill_area(entity, "footer", edit_form is defined?edit_form:null , language is defined?language:"") }}
    {% endblock inside_footer %} 

{% block stylesheets %}
    {{ parent() }}
    {% if app.environment != 'prod' %}
    {% else %}
    <link rel="stylesheet" type="text/css" href="/css/first-layout.css" />
    {% endif %}
{% endblock %}