{% extends "OwnerSiteBundle::base.html.twig" %}
{% import "EvocatioCmsBundle:Macro:content.html.twig" as CHelp %}
{% block navigation %}
{% endblock navigation %}
{% block header %}
{% endblock header %}
{% block inside_theater %} 
{% for area in entity.template.areas %}
<div id="{{ area.name }}" class="area" ondrop="addContent()">
        <section>
            <h6>Available content list</h6>
        </section>
        <div class="display">
            {% for content in entity.getPageContents() %}
                {% if(content.getContent().is("Evocatio\\Bundle\\CmsBundle\\Entity\\HtmlContent")) %}
                
                
                    {% for translation in content.content().translations %}
                        <h1>{{translation.getTransLang().symbol }} => {{translation.getTransLang().name }}</h1>
                        <div id="editable" contenteditable="true">
                            {% if(translation.content) %}
                                {{ translation.content | raw }}
                            {% else %}
                                <h4>Inline Editing in Action!</h4>
                                <p>The div element that contains this text is now editable.
                            {% endif %}
                        </div>
                    {% endfor %}
                
                {% elseif(content.getContent().is("Evocatio\\Bundle\\CmsBundle\\Entity\\Widget")) %}
                        {{ CHelp.render_widget(content.getContent()) }}
                {% else %}
                        No informations
                    {#{ content.getContent().content |raw }#}
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endfor %}
{% endblock inside_theater %}