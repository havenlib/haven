{%  extends "::base.html.twig" %}
{% block content %}
<h1>Security</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.getId() }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ entity.getStatus() }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ entity.getUsername() }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.getEmail() }}</td>
        </tr>
        <tr>
            <th>Locked</th>
            <td>{{ entity.getLocked()?"Locked":"Unlocked" }}</td>
        </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('EvocatioSecurityBundle_UserIndex') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('EvocatioSecurityBundle_UserEdit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('EvocatioSecurityBundle_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock content %}