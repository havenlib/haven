{%  extends "::base.html.twig" %}
{% import "::macro/route/crud.html.twig" as _route_crud %}
{% import "::macro/route/suffix.html.twig" as _route_suffix %}
{% import "::macro/form/translated_row.html.twig" as _form %}

{% block inside_title %} Evocatio Solution Technologie {% endblock inside_title %}

{% block navigation %} 
{% endblock navigation %}

{% block inside_body %} 
    {% spaceless %}
<img id="barup" src={{ asset('images/header.png') }} />
            {% set flashs = ['notice', 'error', 'success', 'info'] %}
            {% for  flash in flashs %}
                {% for  message in app.session.flashBag.get(flash) %}
<div class="notice"> {{ message }}</div>
                {% endfor %}
            {% endfor %}
<div  id="admin">
    <div id="navigation">
    {% include "OwnerSiteBundle::navigation_admin.html.twig" %} 
        </div>
        <div id="edition">
        {% block inside_content %} 

        {% endblock inside_content %}
            </div>
    <div id="help">
        <p>On retrouvera ici l'espace réservé pour les instructions pour chacune des sections de l'administration</p>
        </div>
        </div>
    {% endspaceless %}
    {% block javascripts %}
                    {{ parent() }}
        <script src="/js/sig.js" type="text/javascript"></script>
    {% endblock javascripts %}
{% endblock inside_body %}

{% block stylesheets %}
{{ parent() }}
    {% if app.environment != 'prod' %}
        <link href="{{ asset("less/admin.less") }}" rel="stylesheet/less" type="text/css" />
    {% else %}
        <link rel="stylesheet" type="text/css" href="/css/admin.css" />
    {% endif %}
{% endblock stylesheets %}
