{% import "::macro/form/translated_row.html.twig" as _form %}

{% block inside_title %} Evocatio Solution Technologie {% endblock inside_title %}

{% block navigation %} 
{% endblock navigation %}

{% block inside_body %} 
        {% set flashs = ['notice', 'error', 'success', 'info'] %}
        {% for  flash in flashs %}
            {% for  message in app.session.flashBag.get(flash) %}
                <div class="notice"> {{ message }}</div>
            {% endfor %}
        {% endfor %}
    {% spaceless %}
<div  id="admin">
<div id="navigation">
{% include "OwnerSiteBundle::navigation_admin.html.twig" %} 
</div>
