{% extends "OwnerSiteBundle::base_admin.html.twig" %}
{% import "EvocatioPersonaBundle::macro/route/i18n.html.twig" as route_i18n_persona %}
    
{% block inside_content %}
<h2>{{"employee.list" | trans}}</h2>
<table>
    <thead>
        <tr>
            <th>{{"firstname"|trans}}</th>
            <th>{{"lastname"|trans}}</th>
            <th>Sex</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="sortable">
        {% for entity in entities %}
            <tr>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.sex }}</td>
                <td>
                    <a href="{{ route_i18n_persona.path('owner_site_employee_edit', {"id": entity.id}, ['edit'], 'employee') }}">edit</a>
                    | <a href="{{ route_i18n_persona.path('owner_site_employee_show', {"id": entity.id}, ['show'], 'employee') }}">show</a> |
                     <form action="{{ route_i18n_persona.path('owner_site_employee_delete', {'id': entity.id}, ['delete']) }}" method="post">
                        {{ form_widget(delete_forms[entity.getId()]) }}
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>
                    aucune entr√©
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<ul>
    <li>
        <a href="{{ route_i18n_persona.path('owner_site_employee_create', {}, ['create'], 'employee') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock inside_content %}

