{% extends "OwnerSiteBundle::base_admin.html.twig" %}
{% block inside_content %}
<h2>Liste des menus</h2>
<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="sortable">
        {% for entity in entities %}
            <tr>
                <td>{{ entity.getId() }} {{ entity.getName() }}</td>
                <td>
                    <a href="{{ _route_crud.edit('owner_site_menu_edit',  entity.id) }}">edit</a> 
                    | <form action="{{ _route_crud.delete('owner_site_menu_delete', entity.id) }}">
                        {{ form_widget(delete_form) }}
                    </form> 
                </td>
            </tr>
        {% else %}
            aucune entr√©
        {% endfor %}
    </tbody>
</table>
<ul>
    <li>
        <a href="{{ _route_crud.path('owner_site_menu_create', 'create') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock inside_content %}
